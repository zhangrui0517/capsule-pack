{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* 指定ECMAScript目标版本 */
    "target": "es2017",
    /* 默认注入的库 */
    "lib": ["es6", "es2017"],
    /* 构建产物的规范 */
    "module": "CommonJS",
    /* 允许export=导出，由import from 导入 */
    "esModuleInterop": true,
    /* 生成声明文件，开启后会自动生成声明文件 */
    "declaration": true, 
    /* 构建输出目录 */
    "outDir": "./lib",
    /* 要构建的目录 */
    "rootDir": "./src",
    /* 是否不生成文件 */
    "noEmit": false,
    /* 模块解析 */
    "moduleResolution":"Node"
  },
  "include": ["./src"],
  /* 不检查的目录 */
  "exclude": ["node_modules","./test", "./lib", "./dist", "./template"]
}
